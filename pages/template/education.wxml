<import src="common/head.wxml" />
<import src="common/foot.wxml" />

<template name="education">
  <template is="head" data="{{title: 'EDUCATION', headTitleAni: animation.eduHeadTitle, headSplitAni: animation.eduHeadSplit}}" />
  <view class="main-content">
    <image class="title-img {{animation.eduTitleImg}}" src="{{image.education}}" mode="aspectFit"></image>
    <view class="timeline" wx:for="{{resume.education}}" wx:key="school">
      <view class="timeline-point {{animation.eduTimelinePoint}}" style="animation-delay:{{index+1.3}}s"></view>
      <view class="timeline-item">
        <view class="timeline-period {{animation.eduTimelinePeriod}}" style="animation-delay:{{index+1.5}}s">{{item.period}}</view>
        <view class="timeline-info {{animation.eduTimelineInfo}}" style="animation-delay:{{index+1.8}}s">{{item.school}} {{item.degree}}</view>
      </view>
    </view>
  </view>
  <template is="foot" />
</template>